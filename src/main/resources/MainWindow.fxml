<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="geekbrains.lesson4.Controller">
   <children>
      <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS" />
      <HBox fx:id="msgPanel">
         <children>
            <TextField fx:id="msgField" onAction="#sendMsg" promptText="Написать сообщение..." HBox.hgrow="ALWAYS" />
            <Button onAction="#sendMsg" text="Отправить" />
         </children>
      </HBox>
   </children>
</VBox>
